%nav{:class => 'navbar navbar-default navbar-fixed-top'}
  .container-fluid
    .navbar-header
      %a{:class => 'navbar-brand', :href => root_path }
        GistBac
    %div{:class=> 'collapse navbar-collapse'}
      %ul{:class => 'nav navbar-nav'}
        %li
          = link_to "Home",  root_path
        %li
          = link_to "Users", users_path
        - if user_signed_in?
          %li
            = link_to "My articles", user_articles_path(id: current_user.id)
      %ul{:class => "nav navbar-nav navbar-right"}
        - if user_signed_in?
          %p.navbar-text
            #{current_user.email}
          = link_to "Sign out", destroy_user_session_path, :method => :delete, :class => 'btn btn-default navbar-btn'
        - else
          = link_to "Sign up", new_user_registration_path, :class => 'btn btn-default navbar-btn'
          = link_to "Sign in", new_user_session_path, :class => 'btn btn-default navbar-btn'

